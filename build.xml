<project name="AwePopunder" default="build" basedir="./" >
	
	<property environment="env"/>

    <target name="copyResources" >
        <copy file="resource/index.html" tofile="bin/index.html" />
    </target>
	
	<target name="generateCss" >
		<exec dir="resource/css" executable="npm.cmd">
			<arg line="start" />
		</exec>
	</target>

    <target name="build" description="Generate a new module">
        <antcall target="generateCss" />
        <antcall target="copyResources" />
    </target>

</project>
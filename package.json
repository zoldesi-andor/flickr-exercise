{
  "name": "awepopunder",
  "version": "1.0.0",
  "description": "AwePopunder",
  "main": "index.js",
  "private": true, 
  "directories": {
    "test": "test"
  },
  "scripts": {
	"postinstall": "npm run install.haxelibs && npm run checkout.tools && npm run update.projectfiles && npm run build.prod",
	"install.haxelibs": "haxelib newrepo && haxelib install --always",
    "build.dev": "npm run build.haxe.js.dev && npm run generate.static",
	"build.prod": "npm run build.haxe.js.prod && npm run generate.static",
	"build.haxe.js.prod": "npm run generate.imports && haxe ./build/haxe/build-src.hxml -js bin/Main.js",
	"build.haxe.js.dev": "npm run generate.imports && haxe ./build/haxe/build-src.hxml -js bin/Main.js -debug",
	"build.haxe.js.test": "haxe ./build/haxe/build-test.hxml -js bin/Main.js -debug",
	"generate.imports": "neko ./tools/hex3rdPartyTools/utilities/xml/GenerateImports/bin/GenerateImports.n  -dir ./src/awepopunder/configuration -output ./src/Imports.hx",
    "generate.static": "gulp --gulpfile ./build/gulpfile.js",
	"checkout.tools": "node ./batch/checkout_tools.js",
	"update.projectfiles": "node -e \"var fs = require('fs'); fs.createReadStream('./resource/flashdevelop/AwePopunder.hxproj').pipe(fs.createWriteStream('./AwePopunder.hxproj'));\"",
	"update.all": "haxelib update"
  },
  "repository": {
    "type": "git",
    "url": "https://stash.doclerholding.com/scm/haxe/awe-popunder.git"
  },
  "author": "duke",
  "license": "ISC",
  "devDependencies": {
    "classlist-polyfill": "^1.0.2",
    "gulp": "~3.9.0",
    "gulp-autoprefixer": "~3.1.0",
    "gulp-concat": "^2.6.0"
  },
  "dependencies": {
	"hls.js": "^0.5.8"
  } 
}

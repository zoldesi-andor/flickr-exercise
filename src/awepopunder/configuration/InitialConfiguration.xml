<?xml version="1.0" encoding="utf-8" ?>
<root name="awePopunder">
	
	<!-- MODULES -->
	<module id="languageModule" type="com.module.language.LanguageModule">
        <argument ref="languageServiceLocator" />
    </module>
	
	<!-- SERVICES -->
	<service id="translationService" type="com.service.translation.XmlResourceTranslationService">
		<argument value="translation" />
		<argument value="da" />
	</service>
	
	<servicelocator id="languageServiceLocator" type="hex.config.stateful.ServiceLocator" >
        <item> 
            <key type="Class" value="com.module.language.service.ILanguageDataService"/>
            <value ref="translationService"/>
        </item>
    </servicelocator>
</root>
<?xml version="1.0" encoding="utf-8" ?>
<root>
	<!-- ORDER -->
	<order id="bootstrapOrder" type="hex.event.EventProxy">
		<argument type="null"/>
		<argument type="null"/>
		<listen ref="contextMockModule">
			<event static-ref="awepopunder.module.contextmock.message.ContextModulePublicMessage.READY" strategy="awepopunder.adapter.bootstrap.BootstrapMacro"/>
		</listen>
	</order>
	
	<order id="streamOrder" type="hex.event.EventProxy">
		<argument type="null"/>
		<argument type="null"/>
		<listen ref="hlsService">
			<event static-ref="com.service.stream.hls.event.HlsServiceEvent.STALLED" strategy="awepopunder.adapter.stream.check.CheckStreamMacro"/>
			
			<event static-ref="com.service.stream.hls.event.HlsServiceEvent.MEDIA_ERR_DECODE" strategy="awepopunder.adapter.switchperformer.SwitchPerformerMacro"/>
			<event static-ref="com.service.stream.hls.event.HlsServiceEvent.MEDIA_ERR_NETWORK" strategy="awepopunder.adapter.switchperformer.SwitchPerformerMacro"/>
			<event static-ref="com.service.stream.hls.event.HlsServiceEvent.MEDIA_ERR_ABORTED" strategy="awepopunder.adapter.switchperformer.SwitchPerformerMacro"/>
			<event static-ref="com.service.stream.hls.event.HlsServiceEvent.MEDIA_ERR_SRC_NOT_SUPPORTED" strategy="awepopunder.adapter.switchperformer.SwitchPerformerMacro"/>
			<event static-ref="com.service.stream.hls.event.HlsServiceEvent.UNKNOWN_ERROR" strategy="awepopunder.adapter.switchperformer.SwitchPerformerMacro"/>
		</listen>
	</order>
	
	<order id="offlinePerformerOrder" type="hex.event.EventProxy">
		<argument type="null"/>
		<argument type="null"/>
		<listen ref="performerStatusService">
			<event static-ref="awepopunder.service.performer.performerstatus.message.PerformerStatusServiceMessage.OFFLINE" strategy="awepopunder.adapter.switchperformer.SwitchPerformerMacro"/>
		</listen>
	</order>
	
</root>